= stylesheet_link_tag('views/users/sessions/new')

.container-fluid
  .row.my-4
    .col
      .card.login-box
        .card-body
          %h2.my-4 Entrar

          = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .form-inputs
              = f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }
              = f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }
              -# = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
            .form-actions.mb-4
              = f.button :submit, "Entrar", class: 'btn btn-primary btn-lg'
          = render "devise/shared/links"
