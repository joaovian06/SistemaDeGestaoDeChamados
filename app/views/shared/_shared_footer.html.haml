%footer.footer.bg-dark.text-center
  .container-fluid.py-4
    .footer_info.align-middle
      .row
        .col
          = image_tag "logo", size: "40x40"
          .contact.text-white
            = t('.mindset_support')
        .col
          .contact.text-white
            = t('.mindset_tel')
        .col
          .contact
            = mail_to 'suporte@mindset.com'
  .container-fluid.py-4.border-top.border-success
    .links
      .row
        .col
          = link_to t('.youtube')
        .col
          = link_to t('.instagram')
        .col
          = link_to t('.facebook')
  .container-fluid.py-4.border-top.border-success
    .copyright
      .text-alignment.text-white
        = t('.mindset_consultoria')
        %br
        = t('.copyright')
        = Date.current.year
        %br
        = t('.all_rights_reserved')
